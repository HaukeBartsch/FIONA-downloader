{
  "name": "fiona-downloader",
  "productName": "fiona-downloader",
  "version": "1.0.0",
  "description": "Download from FIONA/Exports",
  "config": {
    "forge": {
      "packagerConfig": {
        "name": "FIONA Downloader",
        "asar": true,
        "osxSign": {},
        "appCategoryType": "public.app-category.developer-tools",
        "icon": "images/logo/ios/iTunesArtwork"
      },
      "makers": [
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "amd64",
            "darwin",
            "arm64"
          ],
          "config": {
            "icon": "images/logo/ios/iTunesArtwork@1x.png"
          }
        }
      ]
    }
  },
  "main": "main.js",
  "type": "module",
  "scripts": {
    "start": "electron-forge start",
    "test": "echo \"Error: no test specified\" && exit 1",
    "package": "electron-forge package",
    "make": "electron-forge make"
  },
  "build": {
    "fileAssociations": [
      {
        "ext": "fiona",
        "name": "FIONA downloader file",
        "role": "Editor",
        "perMachine": true
      }
    ],
    "nsis": {
      "perMachine": true
    }
  },
  "author": "Hauke Bartsch",
  "license": "ISC",
  "devDependencies": {
    "@electron-forge/cli": "^7.5.0",
    "@electron-forge/maker-deb": "^7.5.0",
    "@electron-forge/maker-rpm": "^7.5.0",
    "@electron-forge/maker-squirrel": "^7.5.0",
    "@electron-forge/maker-zip": "^7.5.0",
    "@electron-forge/plugin-auto-unpack-natives": "^7.5.0",
    "@electron-forge/plugin-fuses": "^7.5.0",
    "@electron/fuses": "^1.8.0",
    "electron": "^33.0.2"
  },
  "dependencies": {
    "electron-dl": "^4.0.0",
    "electron-squirrel-startup": "^1.0.1"
  }
}
